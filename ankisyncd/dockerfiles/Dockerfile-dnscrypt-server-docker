FROM  jedisct1/dnscrypt-server
MAINTAINER Zweih√§nder

# cron.sh dependencies
RUN set -ex; \
    apk add --no-cache bind-tools; \
    rm /var/spool/cron/crontabs/root; \
    mkdir -p /var/spool/cron/crontabs /etc/service/unboundCron;

