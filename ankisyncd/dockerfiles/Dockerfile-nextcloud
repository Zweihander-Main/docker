FROM nextcloud:17.0.9-apache
MAINTAINER Zweih√§nder

RUN apt-get update && apt-get install -y \
    supervisor \
  && rm -rf /var/lib/apt/lists/* \
  && mkdir /var/log/supervisord /var/run/supervisord

